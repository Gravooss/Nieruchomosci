<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projekt.nieruchomoci.Start">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-15dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="347dp"
            android:layout_height="130dp"
            android:layout_weight="0.22"
            app:srcCompat="@drawable/kasa" />

        <TextView
            android:id="@+id/pytanie"
            android:layout_width="358dp"
            android:layout_height="70dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="0.20"
            android:gravity="center"
            android:padding="8dp"
            android:text="Jaka jest wartość nabywanej nieruchomości?"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/odpowiedź"
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text=""
            android:visibility="visible"
            android:layout_weight="0.04" />

        <Button
            android:id="@+id/dalej"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Dalej" />

        <Button
            android:id="@+id/koniec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="koniec"
            android:text="Koniec" />

        <Button
            android:id="@+id/powrót"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="powrót"
            android:text="Powrót" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
