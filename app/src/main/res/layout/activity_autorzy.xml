<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projekt.nieruchomoci.Autorzy">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pozdrowienia,\nAdrian Janik\nFilip Jasiak"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView6"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:text="Przyjrzyj się dokładnie naszej aplikacji. \nDzięki niej w końcu możesz sprawdzić\njakimi środkami musisz dysponować\nprzed zakupem własnej nieruchomości. \n Nie daj więcej oczarować się \nNIERZETELNYM DORADCOM!"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/adik"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/jas"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
